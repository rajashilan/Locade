<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="115dp"
    android:layout_height="124dp"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_my_spots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_primary"
        android:orientation="vertical"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_my_spots"
                android:layout_width="105dp"
                android:layout_height="78dp"
                app:srcCompat="@drawable/img1"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/text_view_my_spots_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxWidth="90dp"
                android:maxLines="1"
                android:layout_marginTop="2dp"
                android:text="Location"
                android:textColor="@color/black_primary"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/distance_icon" />

                <TextView
                    android:id="@+id/text_view_my_spots_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxWidth="80dp"
                    android:maxLines="1"
                    android:text="Distance"
                    android:textColor="@color/black_tertiary"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>