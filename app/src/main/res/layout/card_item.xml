<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_swipe_user"
        android:layout_width="348dp"
        android:layout_height="325dp"
        android:background="@color/white_primary"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:elevation="8dp"
        >

        <ImageView
            android:id="@+id/image_view_user_location_swipe_card"
            android:layout_width="348dp"
            android:layout_height="325dp"
            android:foreground="@drawable/gradient"
            android:scaleType="centerCrop"
            android:src="@drawable/user1" />

        <TextView
            android:id="@+id/text_view_user_location_swipe_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textSize="20sp"
            android:textColor="@color/white_primary"
            android:layout_gravity="bottom"
            android:layout_marginLeft="14dp"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/image_button_like"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:background="@drawable/like_button"
            android:layout_marginEnd="6dp"
            android:layout_gravity="bottom|end"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>